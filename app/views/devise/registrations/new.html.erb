<div style="padding-left:100px;">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),class: "form-inline") do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group ">
      <%= f.label :name %><br />
      <%= f.text_field :name,:class=> "form-control",:style=>"width:40%" %>
    </div>


    <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true ,:class=> "form-control",:style=>"width:40%"%>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class=> "form-control" ,:style=>"width:40%"%>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class=> "form-control",:style=>"width:40%" %>
  </div>

    <div class="form-group  ">
      <%= f.label :phone_number %><br />
      <%= f.text_field :phone_number,:class=> "form-control",:style=>"width:40%" %>
    </div></br>

    <div class="form-group">
    <%= f.submit "Sign up",:class => "btn btn-success" %>
  </div>
<% end %>

<%#= render "devise/shared/links" %>
</div>