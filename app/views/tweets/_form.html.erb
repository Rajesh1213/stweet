<%= form_for @tweet,:url => {:controller=> "tweets",:action => "create" },remote: true ,:class => "form-inline" do |f| %>
    <div id='tweet_err_info'>
      <ul></ul>
    </div>
    <h4 style="margin-left:300px;">Compose new Tweet</h4>
    <div class="form-group">
      <%= f.text_area :body,
                      :rows => 2,
                      :cols => 60 ,
                      :maxlength => 50,
                      :minlength=> 5,
                      :autocomplete => :off,
                      :class => "form-control",:placeholder=>"What's happening?"%>
    </div>
    <div class="form-group">
      <%= f.submit "TWEET",:class => "btn btn-primary pull-right"%>
    </div>
<% end %>