<li class="list-group-item <%= "tweet_#{tweet.id}"%>">
  <% unless @user %>
      <%= link_to tweet_path(tweet), method: :delete, id: tweet.id, data: { confirm: "Are you sure?", remote: true },:style=>"float:right" do %>
          <i class="glyphicon glyphicon-trash"></i>
      <% end %>
  <% end %>
  <% if current_user.user_profile.present?%>
      <%= current_user.user_profile.attachment? ? (image_tag current_user.user_profile.try(:attachment).try(:thumb),:width=>"40", :height=>"32") : (image_tag 'thumb_profile.jpg') %>
  <% else %>
      <%=  image_tag 'thumb_profile.jpg'%>
  <% end %>
  <%= tweet.body %><br>
  <%="#{time_ago_in_words(tweet.created_at)} ago"%>
</li>