<div class="row">
  <div class="col-lg-12">
    <div class="col-lg-2">
      <% if user_signed_in? %>
          <h5><%= current_user.name %>!</h5>
          <% if current_user.user_profile.present?%>
              <%= current_user.user_profile.attachment? ? (image_tag current_user.user_profile.try(:attachment).try(:thumb)) : (image_tag 'thumb_profile.jpg') %>
          <% else %>
              <%=  image_tag 'thumb_profile.jpg'%>
          <% end %>
          <p style="margin-top:8px;"class="tweet_count"><%= @tweets.try(:count)%> Tweets</p>
      <% else %>
          <h6>Welcome, new user!</h6>
          <p class="lead">
            You must sign in or sign up before you can access our super stweet,
            top secret content.
          </p>
      <% end %>
    </div>
    <div class="col-lg-8">
      <%= render :partial => "tweets/form"%>
      <div style="height:20px;"></div>
      <div class="clearfix"></div>
      <div class="row">
        <div class="panel">
          <div class="panel-heading"></div>
          <div class="panel-body">
            <ul class="list-group" id="tweet_list">
            <%= render @tweets %></div>
            </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-2">
      <ul class="list-group">
        <li class="list-group-item list-group-item-success">UserA Joined</li>
        <li class="list-group-item list-group-item-info">User B  Quit</li>
        <li class="list-group-item list-group-item-warning">User C Followed You</li>
        <li class="list-group-item list-group-item-danger">User D Retweeted</li>
      </ul>
    </div>
  </div>
</div>